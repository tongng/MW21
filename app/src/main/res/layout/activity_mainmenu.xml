</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:src="@drawable/ic_co9999"
            android:layout_marginLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"

            >
